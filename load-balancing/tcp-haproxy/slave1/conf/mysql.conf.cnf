[mysqld]

skip-host-cache
skip-name-resolve

server-id=2
relay-log = /var/log/mysql/mysql-relay-bin.log
log_bin = /var/log/mysql/mysql-bin.log
binlog_do_db = mydb
binlog_format = ROW


enforce_gtid_consistency=ON
gtid_mode=ON

character-set-server=utf8
collation-server=utf8_general_ci

lower_case_table_names = 1